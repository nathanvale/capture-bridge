{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "tools": ["Bash"]
        },
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/bash-worktree-fix.sh",
            "description": "Automatically prepends worktree path to Bash commands when in a worktree",
            "continueOnError": false
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/node_modules/.bin/quality-check-claude-hook",
            "timeout": 10,
            "description": "Quality check enforcement for code files",
            "continueOnError": false
          }
        ]
      }
    ]
  }
}


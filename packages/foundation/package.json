{
  "name": "@capture-bridge/foundation",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanvale/capture-bridge.git",
    "directory": "packages/foundation"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "@capture-bridge/source": {
        "types": "./src/index.ts",
        "import": "./src/index.ts"
      },
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./hash": {
      "@capture-bridge/source": {
        "types": "./src/hash/index.ts",
        "import": "./src/hash/index.ts"
      },
      "types": "./dist/hash/index.d.ts",
      "import": "./dist/hash/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "concurrently \"pnpm:dev:*\" --names \"build,test\" --prefix-colors \"blue,green\"",
    "dev:build": "tsup --watch",
    "dev:test": "vitest watch",
    "lint": "eslint . --cache --cache-location ../../.eslintcache/foundation --no-warn-ignored",
    "lint:fix": "eslint . --fix --cache --cache-location ../../.eslintcache/foundation --no-warn-ignored",
    "prepublishOnly": "pnpm run build && test -d dist",
    "test": "[ \"$SKIP_FOUNDATION_TESTS\" = \"1\" ] && echo 'Skipping foundation tests (set SKIP_FOUNDATION_TESTS=1)' && exit 0 || TESTKIT_SQLITE_GUARD=on TESTKIT_TIMERS_GUARD=on vitest run",
    "test:watch": "TESTKIT_SQLITE_GUARD=on TESTKIT_TIMERS_GUARD=on vitest watch",
    "test:ui": "TESTKIT_SQLITE_GUARD=on TESTKIT_TIMERS_GUARD=on vitest --ui",
    "test:ci": "TESTKIT_SQLITE_GUARD=on TESTKIT_TIMERS_GUARD=on TESTKIT_SQLITE_GUARD_STRICT=on vitest run --bail 1",
    "test:coverage": "vitest run --coverage",
    "test:integration": "TEST_MODE=integration vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@capture-bridge/build-config": "workspace:*",
    "@orchestr8/testkit": "^2.1.2",
    "@types/node": "^24.3.0",
    "better-sqlite3": "^12.4.1",
    "happy-dom": "^18.0.1",
    "msw": "^2.11.3",
    "tsup": "^8.3.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "private": true
}

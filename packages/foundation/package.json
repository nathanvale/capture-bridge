{
  "name": "@adhd-brain/foundation",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/adhd-brain.git",
    "directory": "packages/foundation"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsup --watch",
    "lint": "eslint . --cache --cache-location ../../.eslintcache/foundation",
    "lint:fix": "eslint . --fix --cache --cache-location ../../.eslintcache/foundation",
    "prepublishOnly": "pnpm run build && test -d dist",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ci": "vitest run --bail 1",
    "test:coverage": "vitest run --coverage",
    "test:integration": "TEST_MODE=integration vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@adhd-brain/build-config": "workspace:*",
    "@orchestr8/testkit": "file:/Users/nathanvale/code/@orchestr8/packages/testkit",
    "@types/node": "^24.3.0",
    "better-sqlite3": "^12.4.1",
    "happy-dom": "^18.0.1",
    "msw": "^2.11.3",
    "tsup": "^8.3.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}

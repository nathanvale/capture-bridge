{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmitOnError": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vitest.config.ts",
    "tsup.config.ts",
    "node_modules",
    "dist"
  ]
}

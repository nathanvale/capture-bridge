{
  "name": "@adhd-brain/capture",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/adhd-brain.git",
    "directory": "packages/capture"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsup --watch",
    "lint": "eslint . --cache --cache-location ../../.eslintcache/capture",
    "prepublishOnly": "pnpm run build && test -d dist",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@adhd-brain/foundation": "workspace:*",
    "@adhd-brain/storage": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
{
  "name": "@capture-bridge/obsidian-bridge",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanvale/capture-bridge.git",
    "directory": "packages/obsidian-bridge"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "@capture-bridge/source": {
        "types": "./src/index.ts",
        "import": "./src/index.ts"
      },
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "concurrently \"pnpm:dev:*\" --names \"build,test\" --prefix-colors \"blue,green\"",
    "dev:build": "tsup --watch",
    "dev:test": "vitest watch",
    "lint": "eslint . --cache --cache-location ../../.eslintcache/obsidian-bridge",
    "lint:fix": "eslint . --fix --cache --cache-location ../../.eslintcache/obsidian-bridge",
    "prepublishOnly": "pnpm run build && test -d dist",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --bail 1",
    "test:coverage": "vitest run --coverage",
    "test:integration": "TEST_MODE=integration vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@capture-bridge/build-config": "workspace:*",
    "@capture-bridge/foundation": "workspace:*",
    "@orchestr8/testkit": "^2.2.0",
    "@types/node": "^24.3.0",
    "better-sqlite3": "^12.4.1",
    "tsup": "^8.3.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "private": true
}

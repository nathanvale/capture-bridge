{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@adhd-brain/*": ["packages/*/src"]
    }
  },
  "include": [],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "./packages/foundation"
    },
    {
      "path": "./packages/storage"
    },
    {
      "path": "./packages/capture"
    },
    {
      "path": "./packages/cli"
    }
  ]
}
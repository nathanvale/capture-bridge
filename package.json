{
  "name": "capture-bridge",
  "version": "0.1.0",
  "private": true,
  "description": "Zero-friction capture layer with durable staging ledger for Obsidian",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/capture-bridge.git"
  },
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --output-logs=errors-only",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write --cache --cache-location .prettierrcache --ignore-path .prettierignore --log-level warn .",
    "format:check": "prettier --check --cache --cache-location .prettierrcache --ignore-path .prettierignore --log-level error .",
    "format:changed": "prettier --write --cache --cache-location .prettierrcache --ignore-path .prettierignore $(git diff --name-only --diff-filter=AM HEAD | grep -E '\\.(js|jsx|ts|tsx|json|yaml|yml|md|css|scss|html)$' | tr '\\n' ' ')",
    "format:staged": "prettier --write --cache --cache-location .prettierrcache --ignore-path .prettierignore $(git diff --staged --name-only --diff-filter=AM | grep -E '\\.(js|jsx|ts|tsx|json|yaml|yml|md|css|scss|html)$' | tr '\\n' ' ')",
    "format:packages": "prettier --write --cache --cache-location .prettierrcache --ignore-path .prettierignore 'packages/**/*.{js,jsx,ts,tsx,json,yaml,yml,md}'",
    "lint": "turbo run lint --continue=dependencies-successful --output-logs=errors-only",
    "lint:fix": "turbo run lint:fix --continue=dependencies-successful --output-logs=errors-only",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --coverage",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=4096' TEST_MODE=integration vitest run",
    "test:e2e": "TEST_MODE=e2e vitest run",
    "test:smoke": "vitest run --bail=1 --no-coverage **/*.smoke.test.*",
    "test:quick": "vitest run --bail=1 --no-coverage --pool=threads",
    "test:focused": "vitest run --changed --no-coverage --bail=1",
    "test:debug": "vitest --inspect-brk --pool=threads --poolOptions.threads.singleThread",
    "test:turbo": "turbo run test --output-logs=errors-only",
    "test:turbo:changed": "turbo run test --filter=\"...[$TURBO_SCM_BASE]\" --output-logs=errors-only",
    "typecheck": "turbo run typecheck --output-logs=errors-only",
    "validate": "turbo run lint typecheck test test:integration \"//#format:check:root\" --output-logs=errors-only",
    "validate:changed": "turbo run lint typecheck test --filter=\"...[${TURBO_SCM_BASE:-origin/main}]\" --output-logs=errors-only",
    "validate:quick": "turbo run lint typecheck --output-logs=errors-only",
    "validate:nocache": "turbo run lint typecheck test test:integration \"//#format:check:root\" --output-logs=errors-only --force",
    "governance": "echo 'Checking boundaries and circular dependencies... check complete'",
    "doctor": "echo 'Running workspace health check...' && pnpm run validate:quick",
    "reset": "pnpm run clean && rm -rf node_modules/.cache .turbo && pnpm install",
    "start": "pnpm run dev",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.34.0",
    "@orchestr8/quality-check": "^1.0.0",
    "@orchestr8/testkit": "^1.0.9",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-turbo": "^2.5.6",
    "eslint-plugin-unicorn": "^61.0.2",
    "prettier": "^3.4.2",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "turbo": "^2.5.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}

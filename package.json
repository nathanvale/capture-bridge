{
  "name": "adhd-brain",
  "version": "0.1.0",
  "private": true,
  "description": "ADHD-optimized voice and email capture system for Obsidian",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/adhd-brain.git"
  },
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --output-logs=errors-only",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write --cache --cache-location .prettierrcache .",
    "format:check": "prettier --check --cache --cache-location .prettierrcache .",
    "lint": "turbo run lint --continue=dependencies-successful --output-logs=errors-only",
    "lint:fix": "turbo run lint --continue=dependencies-successful --output-logs=errors-only",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "turbo run typecheck --output-logs=errors-only",
    "validate": "turbo run lint typecheck test --output-logs=errors-only"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@orchestr8/quality-check": "^1.0.0",
    "@orchestr8/testkit": "^1.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-turbo": "^2.5.6",
    "prettier": "^3.4.2",
    "tsup": "^8.3.0",
    "turbo": "^2.5.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
